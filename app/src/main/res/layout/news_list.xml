<androidx.cardview.widget.CardView android:id="@+id/card3"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/newsImage3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/news4" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_margin="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/newsTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:maxLines="2"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="News Title will shown here\nNews Title will shown here"
                    android:textColor="#ffffff"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:background="#1830ce"/>

                <TextView
                    android:id="@+id/newsSubtitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="News Subtitle will shown here\nNews Subtitle will shown here\nNews Subtitle will shown here"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:background="#1830ce"/>

                <TextView
                    android:id="@+id/ndate3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:paddingRight="10dp"
                    android:text="July 17,2019"
                    android:background="#1830ce"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.cardview.widget.CardView>




