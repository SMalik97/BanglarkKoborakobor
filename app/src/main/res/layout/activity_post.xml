<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Post"
    android:background="#ffffff"
    >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/show_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:inputType="textMultiLine"
                android:paddingLeft="2dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <WebView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <WebView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                />

            <LinearLayout
                android:id="@+id/share1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/whatsapp" />

                <Button
                    android:id="@+id/fb"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/fb"/>

                <Button
                    android:id="@+id/tw"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/twitter" />

                <Button
                    android:id="@+id/g"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/google"/>

                <Button
                    android:id="@+id/sh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="?attr/actionModeShareDrawable"/>
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/sc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/rnews1"
                    android:layout_width="160dp"
                    android:layout_height="160dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rni1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/banglarkhabara_icon"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:id="@+id/rnt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="News Title\nnews Title"
                            android:layout_marginTop="-40dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:background="@color/relatedNews"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:maxLines="2"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rnews2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rni2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/banglarkhabara_icon"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:id="@+id/rnt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="News Title\nnews Title"
                            android:layout_marginTop="-40dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:background="@color/relatedNews"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:maxLines="2"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            </HorizontalScrollView>



            <HorizontalScrollView
                android:id="@+id/sc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/rnews3"
                        android:layout_width="160dp"
                        android:layout_height="160dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rni3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/banglarkhabara_icon"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/rnt3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="News Title\nnews Title"
                                android:layout_marginTop="-40dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:background="@color/relatedNews"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:maxLines="2"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rnews4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/rni4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/banglarkhabara_icon"
                                android:scaleType="fitXY"/>
                            <TextView
                                android:id="@+id/rnt4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="News Title\nnews Title"
                                android:layout_marginTop="-40dp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:background="@color/relatedNews"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:maxLines="2"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>







        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />


</androidx.constraintlayout.widget.ConstraintLayout>