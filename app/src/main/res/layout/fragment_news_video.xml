<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_police"
    android:background="#e7e3ef">


    <LinearLayout
        android:id="@+id/anno1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        android:background="#ced3ef"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/onnoimg1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:src="@drawable/banglarkhabara_icon"
            android:layout_margin="5dp"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/onnotitle1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="3dp"
                android:text="News Title shown here"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#1830bd"/>
            <TextView
                android:id="@+id/onnodate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subrata"
                android:gravity="right"
                android:paddingRight="5dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>